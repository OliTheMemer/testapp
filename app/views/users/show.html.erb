<div class="row">
	<div class="col-sm-2"></div>
	<div class="col-sm-8">
		<div class="row">
			<div class="col-sm-4">
				<%= gravatar_for @user %>
				<b><span><%= @user.name %></span>
				<div class="row">					
					<br><div class="col-sm-6">
						<p>Following 50</p>
					</div>
					<div class="col-sm-6">
						<p>Followers 70</b></p>
					</div>

				</div>
				<div class="row stats">
				</div>

				<div class="row micropost">
					<div class="col-sm-12">
						<%= form_for(@micropost) do |f| %>
							<%= f.text_area :content %>
							<%= f.submit "Post", class: "btn btn-lg btn-primary"%>
						<% end %>
					</div>
				</div>
			</div>
			<div class="col-sm-8">
				<% if @microposts.any? %>
					<h1>Microposts (<%= @microposts.count %>)</h1>
					<hr>
					<ul class="microposts">
						<% @microposts.each do |micropost| %>
							<li>
								<h4><%= micropost.content %></h4>
								<i class="timestamp"><%= time_ago_in_words(micropost.created_at) %></i>
								<hr>
							</li>
						<% end %>
					</ul>

    				<%= will_paginate @microposts %>
				<% else %>
				<% end %>
			</div>
		</div>
	</div>
	<div class="col-sm-2"></div>
</div>




